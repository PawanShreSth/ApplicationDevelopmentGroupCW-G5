 
@using groupCW.ViewModel

@model List<RemoveOldDVDViewModel>



<table class="table text-white table-bordered table-striped" style="width: 100%">
    <thead style="border-bottom: 2px solid white;">
        <tr>
            <th style="width: 14.28%">DVD Title</th>
            <th style="width: 14.28%">DVD Release Date</th>
            <th style="width: 14.28%">Copy Number</th>
            <th style="width: 14.28%">DVD Date Purchased</th>
            <th style="width: 14.28%">Return Date</th>
            <th style="width: 14.28%">Date Out</th>
            <th style="width: 14.28%"></th>
        </tr>
    </thead>

          
    <tbody >
        @foreach(var obj in Model)
        {
            <tr>
                <td class="text-white" width="15%">@obj.dvdTitle</td>
                <td class="text-white" width="15%">@obj.dvdReleaseDate</td>
                <td class="text-white" width="10%">@obj.copyNumber</td>
                <td class="text-white" width="15%">@obj.dvdDatePurchased</td>
                <td class="text-white" width="15%">@obj.dvdDateReturned</td>
                <td class="text-white" width="15%">@obj.dvdDateOut</td>
                <td class="text-white" width="15%">
                   <a 
                        asp-controller="RemoveOldDVD"
                        asp-action="RemoveDVD" 
                        asp-route-id="@obj.dvdid" 
                        style="text-decoration: none"
                        class="badge rounded-pill bg-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
